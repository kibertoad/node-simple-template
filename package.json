{
  "name": "node-simple-template",
  "version": "1.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "copy:config": "cpy --rename=.env ./.env.default ./",
    "test": "cross-env DATABASE_URL=postgresql://testuser:testpass@localhost:25432/test_db_tests vitest",
    "test:migrate": "cross-env DATABASE_URL=postgresql://testuser:testpass@localhost:25432/test_db_tests prisma migrate reset --force",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm run copy:config && npm run test:migrate && npm run test:coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write . && npx prisma format",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "start:prod": "tsc && cross-env NODE_ENV=production node dist/src/server.js",
    "docker:start:dev": "docker compose up -d",
    "docker:stop:dev": "docker compose down",
    "db:migration:dev": "npx prisma migrate dev",
    "db:migration:run": "npx prisma migrate deploy",
    "db:update-client": "npx prisma generate",
    "spec:generate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/generateOpenApi.ts && npm run spec:validate",
    "spec:validate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/validateOpenApi.ts"
  },
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/awilix": "^3.2.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/swagger": "^8.9.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@lokalise/node-core": "^6.2.0",
    "@prisma/client": "^5.2.0",
    "awilix": "^8.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.22.2",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^3.5.1",
    "fastify-no-icon": "^6.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "undici": "^5.23.0",
    "undici-retry": "^2.0.1",
    "validation-utils": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitest/coverage-v8": "^0.34.3",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.3.1",
    "mockttp": "^3.9.2",
    "oas-validator": "^5.0.8",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4",
    "yaml": "^2.3.2"
  }
}
