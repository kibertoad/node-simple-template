{
    "name": "node-simple-template",
    "version": "1.0.0",
    "engines": {
        "node": ">=18"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "node -e \"const fs=require('fs');fs.copyFileSync('.env.default','.env')\"",
        "test": "vitest",
        "test:migrate": "cross-env DATABASE_URL=postgresql://testuser:testpass@localhost:25432/test_db_tests prisma migrate reset --force",
        "test:coverage": "npm test -- --coverage",
        "test:ci": "npm run copy:config && npm run test:migrate && npm run test:coverage",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write .",
        "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
        "start:dev:watch": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
        "start:prod": "tsc && cross-env NODE_ENV=production node dist/src/server.js",
        "docker:start:dev": "docker compose up -d",
        "docker:stop:dev": "docker compose down",
        "db:migration:dev": "npx prisma migrate dev",
        "db:migration:run": "npx prisma migrate deploy",
        "db:update-client": "npx prisma generate",
        "spec:generate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/generateOpenApi.ts && npm run spec:validate",
        "spec:validate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/validateOpenApi.ts"
    },
    "dependencies": {
        "@fastify/awilix": "^8.0.0",
        "@fastify/cors": "^11.1.0",
        "@fastify/helmet": "^13.0.1",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@lokalise/backend-http-client": "^7.2.0",
        "@lokalise/fastify-extras": "^30.0.0",
        "@lokalise/node-core": "^14.4.1",
        "@lokalise/zod-extras": "^3.0.0",
        "@prisma/client": "^6.16.1",
        "@prisma/instrumentation": "^6.16.1",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.1.0",
        "fastify": "^5.6.0",
        "fastify-custom-healthcheck": "^4.0.0",
        "fastify-graceful-shutdown": "^4.0.1",
        "fastify-metrics": "^12.1.0",
        "fastify-no-icon": "^7.0.0",
        "fastify-type-provider-zod": "^6.0.0",
        "layered-loader": "^14.0.1",
        "pino": "^9.9.5",
        "pino-pretty": "^13.1.1",
        "undici": "^7.16.0",
        "validation-utils": "^11.0.1",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@types/node": "^24.3.1",
        "@biomejs/biome": "2.2.4",
        "@lokalise/biome-config": "^3.1.0",
        "@lokalise/tsconfig": "^3.0.0",
        "@readme/openapi-parser": "^5.0.1",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "ioredis": "^5.7.0",
        "mockttp": "^4.1.0",
        "prisma": "^6.16.1",
        "ts-deepmerge": "^7.0.3",
        "typescript": "5.9.2",
        "vitest": "^3.2.4",
        "yaml": "^2.8.1"
    }
}
