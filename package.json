{
    "name": "node-simple-template",
    "version": "1.0.0",
    "engines": {
        "node": ">=18"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "node -e \"const fs=require('fs');fs.copyFileSync('.env.default','.env')\"",
        "test": "vitest",
        "test:migrate": "cross-env DATABASE_URL=postgresql://testuser:testpass@localhost:25432/test_db_tests prisma migrate reset --force",
        "test:coverage": "npm test -- --coverage",
        "test:ci": "npm run copy:config && npm run test:migrate && npm run test:coverage",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write .",
        "start:dev": "node --env-file=.env src/server.ts",
        "start:dev:watch": "node --watch --env-file=.env src/server.ts",
        "start:prod": "node --run build && cross-env NODE_ENV=production node --env-file-if-exists=.env dist/server.js",
        "docker:start:dev": "docker compose up -d",
        "docker:stop:dev": "docker compose down",
        "db:migration:dev": "npx prisma migrate dev",
        "db:migration:run": "npx prisma migrate deploy",
        "db:update-client": "npx prisma generate",
        "spec:generate": "cross-env NODE_ENV=production node --env-file-if-exists=.env scripts/generateOpenApi.ts && node --run spec:validate",
        "spec:validate": "cross-env NODE_ENV=production node --env-file-if-exists=.env scripts/validateOpenApi.ts",
        "docs:validate": "cross-env NODE_ENV=production node --env-file-if-exists=.env scripts/validateEnvVarDoc.ts"
    },
    "dependencies": {
        "@fastify/awilix": "^8.1.0",
        "@fastify/cors": "^11.1.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/swagger": "^9.6.1",
        "@lokalise/backend-http-client": "^9.0.0",
        "@lokalise/fastify-extras": "^30.2.1",
        "@lokalise/node-core": "^14.4.2",
        "@lokalise/zod-extras": "^3.0.0",
        "@prisma/client": "^6.19.0",
        "@prisma/instrumentation": "^6.19.0",
        "@scalar/fastify-api-reference": "^1.38.1",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.1.0",
        "fastify": "^5.6.2",
        "fastify-custom-healthcheck": "^4.0.0",
        "fastify-graceful-shutdown": "^5.0.0",
        "fastify-metrics": "^12.1.0",
        "fastify-no-icon": "^7.0.0",
        "fastify-type-provider-zod": "^6.1.0",
        "layered-loader": "^14.2.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "undici": "^7.16.0",
        "validation-utils": "^11.0.1",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@biomejs/biome": "2.3.7",
        "@lokalise/biome-config": "^3.1.1",
        "@lokalise/tsconfig": "^3.0.0",
        "@readme/openapi-parser": "^5.2.1",
        "@vitest/coverage-v8": "^4.0.14",
        "cross-env": "^10.1.0",
        "ioredis": "^5.8.2",
        "mockttp": "^4.2.1",
        "prisma": "^6.19.0",
        "ts-deepmerge": "^7.0.3",
        "typescript": "5.9.3",
        "vitest": "^4.0.4",
        "yaml": "^2.8.2"
    }
}
